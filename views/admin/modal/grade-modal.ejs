<!-- Modal Add-->
<div class="modal fade" id="addGradeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
		<form class="p-20" action="/grade" method="POST" >
		<input type="hidden" name="_csrf" value="<%= ContentData.tokens %>">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Tambah Kelas<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button></h4>
            </div>
            <div class="modal-body">
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label for="dataName">Nama</label>
							<input type="text" class="form-control" name="dataName" id="dataName" placeholder="Masukkan nama kelas">
						</div>
					</div>
					<!-- /.col-md-6 -->
					
					<div class="col-md-2">
						<div class="form-group">
							<label for="dataTingkat">Tingkat</label>
							<select class="form-control" name="dataTingkat" id="dataTingkat">
							<% for(let i = 0; i < 13; i++){ var no = i+1; %>
								<option value="<%= no %>"><%= no %></option>
							<% } %>
							</select>
						</div>
					</div>
					<div class="col-md-1">
						<div class="form-group">
							<label for="strip">&nbsp;</label>
							<div name="strip">-</div>
						</div>
					</div>
					<div class="col-md-2">
						<div class="form-group">
							<label for="dataSampai">Sampai</label>
							<select class="form-control" name="dataSampai" id="dataSampai">
							<% for(let i = 0; i < 13; i++){ var no = i+1; %>
								<option value="<%= no %>"><%= no %></option>
							<% } %>
							</select>
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="dataKurikulum">Kurikulum</label>
							<select class="form-control" name="dataKurikulum" id="dataKurikulum">
								<option value="0">Nasional</option>
								<option value="1">Cambridge Assessment</option>
								<option value="2">International Baccalaureate</option>
							</select>
						</div>
					</div>
					<!-- /.col-md-6 -->
				</div> 
			</div>
            <div class="modal-footer">
                <div class="btn-group" role="group">
                    <button type="reset" class="btn btn-gray btn-wide btn-rounded" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                    <button type="submit" class="btn bg-success btn-wide btn-rounded"><i class="fa fa-check"></i>Save</button>
                </div>
            </div>
        </form>
		</div>
    </div>
</div>
<!-- /.Modal Add-->

