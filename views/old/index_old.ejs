<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous" />
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="text-center">CRUD DATA KARYAWAN</h2>
      <div class="row mt-3">
	  <!-- Alert -->
        <div class="col-auto col-lg-12 mt-2">
          <% if(alert.message != "") { %>
          <div class="alert alert-<%= alert.status %>" role="alert">
            <%= alert.message %>
          </div>
          <% } %>
        </div>
        <!-- Table -->
        <div class="col-auto col-lg-12 mt-2"><%- include('table.ejs') %></div>
      </div>
    </div>
	<!-- Add Modal -->
    <%- include('add_modal.ejs') %>
    <%- include('edit_modal.ejs') %>
    <!-- JS -->
    <%- include('js.ejs') %>
	
	<script>
		$("#dataTable").on("click", ".button-update", function () {
			let id = $(this).data("id");
			let nama = $(this).data("nama");
			let nik = $(this).data("nik");
			let jabatan = $(this).data("jabatan");
			let divisi = $(this).data("divisi");
			
			$("#edit-modal").modal("show");
			$(".id").val(id);
			$(".nama").val(nama);
			$(".nik").val(nik);
			$(".jabatan").val(jabatan);
			$(".divisi").val(divisi);
		});
    </script>
  </body>
</html>